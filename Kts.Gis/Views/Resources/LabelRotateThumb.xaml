<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:views="clr-namespace:Kts.Gis.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Стиль вращалки надписи -->
    <Style
        TargetType="{x:Type views:LabelRotateThumb}">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="{x:Type views:LabelRotateThumb}">
                    <Grid
                        x:Name="grid"
                        Height="{TemplateBinding Height}"
                        Width="{TemplateBinding Width}">
                        <Ellipse
                            Cursor="Hand"
                            Fill="#AA000000"
                            Height="{TemplateBinding Height}"
                            Width="{TemplateBinding Width}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>