<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Меню выбора дочернего объекта -->
    <Style
        x:Key="SelectChildMenuItemStyle"
        TargetType="{x:Type MenuItem}">
        <Setter
            Property="Command"
            Value="{Binding SelectChildCommand}" />
        <Setter
            Property="Header"
            Value="{Binding Name}" />
    </Style>
</ResourceDictionary>